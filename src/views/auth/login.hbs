<div class="form-container">
  <form action="/login" class="form-login" method="POST" novalidate>

    <div class="form-header"></div>

    <div class="form-content">

        {{#if errors}}
          {{#each errors}}
            <p class="error-input">{{msg}}</p>
          {{/each}}
        {{/if}}

      <div class="form-group">
        <label for="correo" class="label">correo:</label>
        <input type="text" name="correo" class="field" id="correo" placeholder="Enter Correo" 
          value={{usuario.correo}}>
      </div>

      <div class="form-group">
        <label for="password" class="label">password:</label>
        <input type="password" name="password" class="field" id="passwordForm" placeholder="Enter password" value={{usuario.password}}>
      </div>

      <div class="check-group">
        <input type="checkbox" name="check" id="check">
        <label for="check">show password</label>
      </div>

      <button type="submit" class="btn-login">Login</button>
      <span class="link-form">Â¿No tienes cuenta?, <a href="/registrar">Registrate</a></span>
    </div>

  </form>
</div>

<script src="/script/main.js"></script>